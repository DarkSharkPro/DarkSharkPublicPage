include ../icon/index
include ../social/index

mixin line()
    div.line
        div.line__upload-cv
            button(type="button").line__button
                +icon('cv')
            span.line__text send your CV
        +socials([
            {
                "href": "https://www.facebook.com/Darksharkteam/",
                "icon": "facebook"
            },
            {
                "href": "https://www.linkedin.com/company/darkshark/",
                "icon": "linkedin"
            },
            {
                "href": "#",
                "icon": "dou"
            }
        ], {"class": "line__social"})


