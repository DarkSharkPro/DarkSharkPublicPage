            footer.footer
                div.container.footer__inner
                    div.footer__nav
                        +nav(
                            [
                                [
                                    ["about", "#"],
                                    ["services", "#"],
                                    ["technologies", "#"],
                                    ["careers", "#"],
                                    ["contact", "#"]
                                ]
                            ]
                        )
                    div.footer__info
                        +logo("", {"class": "footer__logo"})
                        div.footer__email
                            a(href="mailto:company@darkshark.pro") company@darkshark.pro
                        div.footer__social
