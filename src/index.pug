                        div.business__firstly
                            div.business__titles
                                div.business__card
                                    +title-card-bg(["What", "we do"])
                            div.business__services
                                +carousel-centered([
                                    [
                                        "#Web_Design_&_Development",
                                        "#Web_Application_Development",
                                        "#Mobile_Application_Development",
                                        "#Enterprise_Application_Development",
                                        "#Software_Product_Development"
